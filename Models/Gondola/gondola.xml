<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>Gondola.ac</path>

  <!--Correct texturizing -->
  <animation>
    <type>material</type>
    <object-name>Gondola</object-name>
    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>gondola.png</texture>
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>
    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>seat</object-name>
    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>Seat.png</texture>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Gondola</object-name>
    <object-name>glass</object-name>
    <object-name>seat</object-name>
    <emission>
      <property>/sim/model/hide-gondola</property>
      <red>   0.5 </red>
      <green> 0.3 </green>
      <blue>  0.3 </blue>
    </emission>
  </animation>

  <animation>
    <name>gondola</name>
    <object-name>Gondola</object-name>
    <object-name>glass</object-name>
    <object-name>seat</object-name>
  </animation>
 
  <!-- Mitrailleuses -->
  <!-- Up turet -->
  <model>
    <name>GunsMobileLeft</name>
    <path>Aircraft/Condor-Jsb/Models/Guns/guns.xml</path>
    <offsets>
      <x-m> -9.38878 </x-m>
      <y-m> 0.12310 </y-m>
      <z-m>  -1.1 </z-m>
    </offsets>
  </model>

  <model>
    <name>GunsMobileRight</name>
    <path>Aircraft/Condor-Jsb/Models/Guns/guns.xml</path>
    <offsets>
      <x-m> -9.38878 </x-m>
      <y-m> -0.12310 </y-m>
      <z-m>  -1.1 </z-m>
    </offsets>
  </model>

	<animation>
		<type>select</type>
		<object-name>Gondola</object-name>
		<object-name>glass</object-name>
		<object-name>seat</object-name>
		<object-name>GunsMobileLeft</object-name>
		<object-name>GunsMobileRight</object-name>
		<condition>
			<equals>
				<property>/sim/model/livery/name</property>
				<value>BS-AJ</value>
			</equals>
		</condition>
	</animation>

</PropertyList>
